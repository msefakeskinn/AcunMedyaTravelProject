@model List<AcunMedyaTravelProject.Entities.Sponsor>

@{

    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">

    <br /><br />
    <h2>Sponsorlar</h2>


    <table class="table table-bordered table-hover">


        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Resim</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SponsorID</td>
                    <td><img src="@item.ImageURL" style="width: 50px;height:50px;" /></td>
                    <td><a href="/Sponsors/UpdateSponsors/@item.SponsorID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.SponsorID)">Sil</button></td>
                </tr>
            }
        </tbody>
    </table>
    <br /><br />
    <a href="/Sponsors/AddSponsors" class="btn btn-dribbble">Oluştur</a>

</div>
<script>
    function Delete(id) {
        Swal.fire({
            title: "Emin Misin?",
            text: "Dikkat bu işlemin geri dönüşü yoktur!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Sponsor başarıyla silindi.",
                    icon: "success",
                    timer: 2000,
                    showConfirmButton: false
                });
                setTimeout(function () {
                    window.location.href = "/Sponsors/DeleteSponsors/" + id;
                }, 2000);
            }
        })
    }
</script>

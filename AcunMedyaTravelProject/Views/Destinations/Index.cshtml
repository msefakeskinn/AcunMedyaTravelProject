@model List<AcunMedyaTravelProject.Entities.Destinations>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">

    <br /><br />
    <h2>Destinasyon Listesi</h2>


    <table class="table table-bordered table-hover">


        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Başlık</th>
                <th>Açıklama1</th>
                <th>Açıklama2</th>
                <th>Resim</th>
                <th>Kategori</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DestinationsID</td>
                    <td>@item.Title</td>
                    <td>@item.Description1</td>
                    <td>@item.Description2</td>
                    <td><img src="@item.ImageURL" style="width: 50px;height:50px;" /></td>
                    <td>@item.CategoryID</td>
                    <td><a href="/Destinations/UpdateDestinations/@item.DestinationsID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.DestinationsID)">Sil</button></td>

                </tr>
            }


        </tbody>

    </table>

    <br /><br />
    <a href="/Destinations/AddDestinations" class="btn btn-dribbble">Oluştur</a>

</div>

<script>
    function Delete(id) {
        Swal.fire({
            title: "Emin Misin?",
            text: "Dikkat bu işlemin geri dönüşü yoktur!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Verin silindi",
                    icon: "success"
                });
                window.location.href = '/Destinations/DeleteDestinations/' + id;
            }
        });
    }
</script>



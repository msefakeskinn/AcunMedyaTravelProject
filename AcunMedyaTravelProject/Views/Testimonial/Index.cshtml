@model List<AcunMedyaTravelProject.Entities.Testimonials>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">

    <br /><br />
    <h2>Referanslar Sayfası</h2>


    <table class="table table-bordered table-hover">


        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Resim</th>
                <th>İsim Soyisim</th>
                <th>Ünvan</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TestimonialID</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageURL" style="width: 50px;height:50px;" /></td>
                    <td>@item.TestimonialName</td>
                    <td>@item.Degree</td>
                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.TestimonialID)">Sil</button></td>
                </tr>
            }
        </tbody>
    </table>
    <br /><br />
    <a href="/Testimonial/AddTestimonial" class="btn btn-dribbble">Oluştur</a>

</div>
<script>
    function Delete(id) {
        Swal.fire({
            title: "Emin Misin?",
            text: "Dikkat bu işlemin geri dönüşü yoktur!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Silme işlemi başarılı.",
                    icon: "success"
                });
                window.location.href = "/Testimonial/DeleteTestimonial/" + id;
            }
        })
    }
</script>

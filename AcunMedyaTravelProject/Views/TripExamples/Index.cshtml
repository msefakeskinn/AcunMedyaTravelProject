@model List<AcunMedyaTravelProject.Entities.TripExample>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">

    <br /><br />
    <h2>Seyehat </h2>


    <table class="table table-bordered table-hover">


        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Başlık</th>
                <th>Açıklama1</th>
                <th>İkon</th>
                <th>Resim</th>
                <th>Açıklama2</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TripExampleID</td>
                    <td>@item.Title</td>
                    <td>@item.Description1</td>
                    <td>@item.IconURL</td>
                    <td><img src="@item.ImageURL" style="width: 50px;height:50px;" /></td>
                    <td>@item.Description2</td>
                    <td><a href="/TripExamples/UpdateTripExamples/@item.TripExampleID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.TripExampleID)">Sil</button></td>
                </tr>
            }
        </tbody>
    </table>
    <br /><br />
    <a href="/TripExamples/AddTripExamples" class="btn btn-dribbble">Oluştur</a>

</div>
<script>
    function Delete(id) {
        Swal.fire({
            title: "Emin Misin?",
            text: "Dikkat bu işlemin geri dönüşü yoktur!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Silme işlemi başarılı.",
                    icon: "success",
                    timer: 2000
                });
                window.location.href = "/TripExamples/DeleteTripExamples/" + id;
            }
        })
    }
</script>
@model List< AcunMedyaTravelProject.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">

    <br /><br />
    <h2>Kategori Sayfası</h2>


    <table class="table table-bordered  table-hover">


        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Kategori İsmi</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.Name</td>
                    <td><a href="/Categories/UpdateCategories/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.CategoryID)">Sil</button></td>
                </tr>
            }

        </tbody>
    </table>

    <br /><br />
    <a href="/Categories/AddCategories" class="btn btn-dribbble">Oluştur</a>


</div>
<script>
    function Delete(id) {
        Swal.fire({
            title: "Emin Misin?",
            text: "Dikkat bu işlemin geri dönüşü yoktur!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Silme işlemi başarılı.",
                    icon: "success",
                    timer: 2000
                }).then(() => {
                    window.location.href = "/Categories/DeleteCategories/" + id;
                });
            }
        });
    }
</script>

